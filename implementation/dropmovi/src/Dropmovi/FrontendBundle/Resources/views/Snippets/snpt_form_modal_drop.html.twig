<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 id="myModalLabel">Deja caer algo</h4>
    </div>
        <form class="form-horizontal" method="POST" action="{{path ('dropmovi_frontend_dropit')}}" {{ form_enctype(form) }}>
        <div class="modal-body">   
            <div class="control-group">
                <label class="control-label">Foto portada</label>
                <div class="controls">
                    {{form_widget (form.file)}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Título</label>
                <div class="controls">
                    {{form_widget (form.title)}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Categoría</label>
                <div class="controls">
                    {{form_widget (form.category)}}
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    {{form_widget (form.content)}}
                </div>
            </div> 
            <div class="control-group">
                <div class="controls">
                    {{form_widget (form.tags)}}
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-primary" type="submit" value="Drop!">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>         
        </div>
        {{form_rest (form)}}
    </form>
</div>           