{%extends "DropmoviFrontendBundle:Template:frontend_template.html.twig"%}
{%block title%} {{user.name ~" "~ user.lastName}} - {{parent()}}{%endblock%}
{%block container%}
<div class="container-fluid">
    <div class="span8">
        <div class="row-fluid">
            <div class="span2"><img src="{{user.getWebPath|apply_filter('thumb_profile')}}" class="img-rounded"></div>
            <div class="span10">
                <h3>{{user.name ~ " " ~ user.lastName}}</h3>
                <p>{{user.biography}}</p>
                {%if user.location%}<li class="icon-map-marker"></li> {{user.location}}{%endif%} <li class="icon-globe"></li> <a href="{{user.website}}" target="blank">{{user.website}}</a>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12 ">
                <legend>Drops</legend>                
                {%if publications%}
                    {%for publication in publications%}
                        <div class="media">
                            <a class="pull-left" href="{{path('dropmovi_frontend_view_publication', {'category':publication.category.slug, 'slug':publication.slug, 'id':publication.id})}}">
                                <img class="media-object img-polaroid" src="{{publication.WebPath|apply_filter('thumb_cover_publi_profile')}}">
                            </a>
                            <div class="media-body">
                                <h5 class="media-heading">
                                    <a href="{{path('dropmovi_frontend_view_publication', {'category':publication.category.slug, 'slug':publication.slug, 'id':publication.id})}}">{{publication.title}}</a>
                                    <small><a href="#">editar</a> · <a href="#">eliminar</a></small>
                                </h5>
                                <p><small>{{publication.description|raw}}</small></p>                                
                            </div>
                        </div>
                    {%endfor%}
                {%else%}
                    <p class="text-info well">No has compartido nada aún.</p>
                {%endif%}
            </div>
        </div>
    </div>
    <div class="span4">
        <!--Sidebar content-->
    </div>
</div>
{%endblock%}
