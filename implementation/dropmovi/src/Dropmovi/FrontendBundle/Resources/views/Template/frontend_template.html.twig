<!DOCTYPE html>
<html>
    <head>
        <title>{%block title%}Dropmovi{%endblock%}</title>
        <!-- stylesheets -->
        <link href="{{asset ('bundles/frontend/css/style.css')}}" rel="stylesheet" media="screen">
        <link href="{{asset ('bundles/frontend/css/bootstrap.min.css')}}" rel="stylesheet" media="screen">
    </head>
    <body>
        <div class="navbar navbar-inverse" style="position: static;">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{path('dropmovi_frontend_homepage')}}">Dropmovi</a>
                    <div class="nav-collapse collapse navbar-inverse-collapse">
                        {% if is_granted('ROLE_USER') %}
                            <ul class="nav pull-right">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{app.user.name}}<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li class="divider"></li>
                                        <li><a href="{{path ('dropmovi_frontend_logout')}}">Salir</a></li>
                                    </ul>
                                </li>
                            </ul>
                        {%else%}
                            <ul class="nav pull-right">
                                <li><a href="{{path ('dropmovi_frontend_signin')}}">Crear cuenta</a></li>
                                <li class="divider-vertical"></li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Iniciar Sesión<b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form class="navbar-form login" method="POST" action="{{path('dropmovi_frontend_login_check')}}">
                                                <div class="control-group">                                                   
                                                    <div class="controls">
                                                        <input type="text" name="_username" placeholder="Usuario">
                                                    </div>
                                                </div>
                                                <div class="control-group">                                                    
                                                    <div class="controls">
                                                        <input type="password" name="_password" placeholder="Contraseña">
                                                    </div>
                                                </div>
                                                <div class="control-group">
                                                    <div class="controls">
                                                        <label class="checkbox">
                                                            <input type="checkbox"> Recordarme
                                                        </label>
                                                        <button type="submit" class="btn btn-primary">Entrar</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        {%endif%}                            
                        </div>
                    </div>
                </div>
            </div>
        {%block container%}{%endblock%}
            <!-- script -->
            <script src="http://code.jquery.com/jquery-latest.js"></script>
            <script src="{{asset ('bundles/frontend/js/bootstrap.min.js')}}"></script>
        </body>
    </html>