{%extends "DropmoviFrontendBundle:Template:frontend_template.html.twig"%}
{%block title%}Crear una cuenta en {{parent()}} - {{parent()}}{%endblock%}
{%block container%}
<div class="container-fluid">
    <div class="row-fluid">
        <form method="POST" {{ form_enctype(form) }}>
            <div class="span7 offset1 column-left">
                <div class="header-section">
                    <h3>Sube una foto de perfil</h3>
                </div>
                <div class="row-fluid">
                    <div class="span4">
                        <ul class="thumbnails">
                            <li class="span12">
                                <img src="{{app.user.getWebPath}}" alt="photo_user">                      
                            </li>              
                        </ul>
                    </div>
                    <div class="span8">                    
                        {{form_widget(form.file)}}                    
                    </div>
                </div>
                <hr>
                <div class="row-fluid">
                    <div class="span11">
                        <div class="pull-right">
                            <a href="{{path('dropmovi_frontend_homepage')}}">Omitir</a> | 
                            <input class="btn btn-primary" value="Siguiente" type="submit"/>
                        </div>
                    </div>  
                </div>
            </div>
            {{form_rest(form)}}
        </form>
        <div class="span3">
            <div class="wrapper-collumn-right">
            {%render 'DropmoviFrontendBundle:Snippets:newPublications'%}
            </div>
        </div>
    </div>
</div>
{%endblock%}
