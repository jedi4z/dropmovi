{%extends "DropmoviFrontendBundle:Template:frontend_template.html.twig"%}
{%block title%}Crear una cuenta en {{parent()}} - {{parent()}}{%endblock%}
{%block container%}
<div class="container-fluid">
    <div class="span7 offset1 column-left">
        <div class="header-section">
            <h3>Crear una cuenta</h3>
        </div>
        <form class="form-horizontal" method="POST" {{ form_enctype(form) }}>
            <div class="control-group">
                <label class="control-label">Nombre</label>
                <div class="controls">
                    {{form_widget (form.name)}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Apellido</label>
                <div class="controls">
                    {{form_widget (form.lastName)}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Usuario</label>
                <div class="controls">
                    {{form_widget (form.username)}}
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Email</label>
                <div class="controls">
                    {{form_widget (form.email)}}
                </div>
            </div>  
            <div class="control-group">
                <label class="control-label">Contraseña</label>
                <div class="controls">
                    {{form_widget (form.password)}}
                </div>
            </div>                      
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-success">¡Crear mi cuenta en Dropmovi!</button>
                </div>
            </div>
            {{form_rest (form)}}            
        </form>
    </div>
    <div class="span3">
        <div class="wrapper-collumn-right">
            <h4>Intercambia <span>Información</span></h4>
            <p>
                <small>
                    Puedes crear nuevos "Drops" y compartirlos con los demas
                    usuarios, ayuda a generar nuevo contenido y compartelo!
                </small>
            </p>
            <h4>Invita <span>a tus amigos</span></h4>
            <p>
                <small>
                    Envita a tus amigos a ser parte de Dropmovi.
                </small>
            </p>
        </div>
    </div>
</div>
{%endblock%}
