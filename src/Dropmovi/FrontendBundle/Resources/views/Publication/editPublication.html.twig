{%extends "DropmoviFrontendBundle:Template:frontend_template.html.twig"%}
{%form_theme form "DropmoviFrontendBundle:Form:form_layout_new_publication.html.twig"%}
{%block title%} Editar mi drop | {{parent()}}{%endblock%}
{%block container%}
<div class="container-fluid">
<div class="container-fluid">
    <div class="span8">
        <form class="form-horizontal" method="POST" {{ form_enctype(form) }}> 
                <legend>Editar mi Drop</legend>
                <div class="control-group">
                    <label class="control-label">Foto portada</label>
                    <div class="controls">
                        {{form_widget (form.file)}}
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Título</label>
                    <div class="controls">
                        {{form_widget (form.title)}}
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        {{form_widget (form.content)}}
                    </div>
                </div> 
                <div class="control-group">
                    <label class="control-label">Categoría</label>
                    <div class="controls">
                        {{form_widget (form.category)}}
                    </div>
                </div>  
                <div class="control-group">
                    <label class="control-label">Etiquetas</label>
                    <div class="controls">
                        {{form_widget (form.tags)}}
                    </div>
                </div>  
            <div class="form-actions">
                <input class="btn btn-primary" type="submit" value="Drop it!">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>         
            </div>
            {{tinymce_init()}}
            {{form_rest (form)}}
        </form>
    </div>
    <div class="span4">
        <!--Sidebar content-->
    </div>
</div>
{%endblock%}