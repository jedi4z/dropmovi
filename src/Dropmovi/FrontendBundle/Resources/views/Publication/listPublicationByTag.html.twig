{%extends "DropmoviFrontendBundle:Template:frontend_template.html.twig"%}
{%block title%} Publicaciones por etiqueta | {{parent()}}{%endblock%}
{%block container%}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span7 offset1 column-left">
            <!--
            <form>
                <div class="input-append">
                  <input class="span4" id="appendedInputButtons" type="text">
                  <button class="btn" type="button">Search</button>
                </div>
            </form>
            -->
            <legend>Resultados para "<strong>{{tag}}</strong>"</legend>
            <!-- list publications -->
            {%if publications%}
                <ul class="thumbnails">
                    {%for publication in publications%}
                    <li class="span2">
                        <div class="thumbnail thumb-publication">
                            <a href="{{path('dropmovi_frontend_view_publication', {'category':publication.category.slug, 'slug':publication.slug, 'id':publication.id})}}">
                                <img src="{{publication.WebPath|apply_filter('thumb_cover_publi_homepage')}}" alt="{{publication.slug}}">
                            </a>
                            <div class="wrapper-tools-group">
                                <!--<i class="icon-heart"></i> 345--> 
                                <i class="icon-comment"></i> {{publication.comments|length}}
                                <i class="icon-eye-open"></i> {{publication.visits}}
                            </div>
                        </div>
                        <div class="wrapper-info-user">
                           <img src="{{publication.author.WebPath|apply_filter('thumb_profile_homepage')}}" class="img-circle"></a>
                           <a href="{{path('dropmovi_frontend_public_profile', {'username':publication.author.username})}}"><small>{{publication.author.name~" "~publication.author.lastName}}</small></a>
                        </div>
                    </li>
                    {%endfor%}
                </ul>
            {%else%}
                <p class="text-info">No hay concidencias para {{tag}}</p>
            {%endif%}
        </div>
        <div class="span3">
            <div class="wrapper-info">
                
            </div>
        </div>
    </div>
</div>
{%endblock%}