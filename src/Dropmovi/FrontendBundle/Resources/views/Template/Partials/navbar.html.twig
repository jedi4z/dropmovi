{% if is_granted('ROLE_USER') %}
<div class="navbar navbar-inverse">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{path('dropmovi_frontend_homepage')}}">Dropmovi</a>
            <div class="nav-collapse collapse navbar-inverse-collapse">
                <form class="navbar-search pull-left" action="{{path('dropmovi_frontend_search_publication')}}" method="POST">
                    <input type="text" class="search-query span3" placeholder="Search" name="tag">
                </form>
                <ul class="nav pull-right">                                
                    <li class="dropdown">                                    
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{app.user.name ~ " " ~ app.user.lastName}} <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{path ('dropmovi_frontend_profile')}}">Perfil</a></li>
                            <li><a href="{{path ('dropmovi_frontend_edit_profile')}}">Editar perfil</a></li>
                            <li><a href="{{path ('dropmovi_frontend_configuration')}}">Configuración de la cuenta</a></li>
                            <li class="divider"></li>
                            <li><a href="{{path ('dropmovi_frontend_logout')}}">Salir</a></li>
                        </ul>
                    </li>
                    <li class="divider-vertical"></li>
                    <a href="{{path ('dropmovi_frontend_add_publication')}}" class="btn btn-primary"><i class="icon-tint icon-white"></i></a>
                </ul>                     
            </div>
        </div>
    </div>
</div> 
{%else%}
<div class="navbar navbar-inverse">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{path('dropmovi_frontend_homepage')}}">Dropmovi</a>
            <div class="nav-collapse collapse navbar-inverse-collapse">
                <form class="navbar-search pull-left" action="{{path('dropmovi_frontend_search_publication')}}" method="POST">
                    <input type="text" class="search-query span3" placeholder="Search" name="tag">
                </form>
                <ul class="nav pull-right">
                    <li><a href="{{path ('dropmovi_frontend_signin')}}">Crear cuenta</a></li>
                    <li class="divider-vertical"></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Iniciar Sesión<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <form class="navbar-form login" method="POST" action="{{path('dropmovi_frontend_login_check')}}">
                                    <div class="control-group">                                                   
                                        <div class="controls">
                                            <input type="text" name="_username" placeholder="Usuario">
                                        </div>
                                    </div>
                                    <div class="control-group">                                                    
                                        <div class="controls">
                                            <input type="password" name="_password" placeholder="Contraseña">
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        <div class="controls">
                                            <label class="checkbox">
                                                <input type="checkbox" name = "_remember_me"> Recordarme
                                            </label>
                                            <button type="submit" class="btn btn-primary">Entrar</button>
                                        </div>
                                    </div>
                                </form>
                            </li>                                                
                        </ul>
                    </li>
                </ul>                          
            </div>
        </div>
    </div>
</div> 
{%endif%}

