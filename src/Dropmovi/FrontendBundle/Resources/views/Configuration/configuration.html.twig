{%extends "DropmoviFrontendBundle:Template:frontend_template.html.twig"%}
{%block title%} Configuración de la cuenta - {{parent()}}{%endblock%}
{%block container%}
<div class="container-fluid">    
    <div class="span8">
        <form class="form-horizontal" method="POST" {{ form_enctype(form) }}>            
            <legend>Configuración de la cuenta</legend>
            <div class="control-group">
                <label class="control-label">Email</label>                
                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-envelope"></i></span>
                        {{form_widget (form.email)}}
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Nombre de usuario</label>
                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on">@</span>
                        {{form_widget (form.username)}}
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">Contraseña</label>
                <div class="controls">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-globe"></i></span>
                        {{form_widget (form.password)}}
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <button type="button" class="btn">Cancelar</button>
                </div>
            </div>
            {{form_rest (form)}}
        </form>
    </div>
    <div class="span4 well">
        <!--Sidebar content-->
    </div>
</div>
{%endblock%}
